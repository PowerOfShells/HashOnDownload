<?xml version="1.0" encoding="utf-8"?>
<Configuration>

    <Option DefaultDownloadOverride="False" /> <!-- Determines if the default download folder is used or if an alternative path is chosen-->
    <Option MultipleFolderWatch="False"/> <!-- enables or diables if more than one folder is watched, additional folders can be listed infite as below -->

    <FolderToWatch Path="C:\users\starkep\downloads" /> <!-- path to alternative folder, is not used if DefaultDownloadOverride is False -->
    <FolderToWatch Filter="*.*" /> <!-- *.* watches everything -->
    <FolderToWatch IncludeSubDirs="True" /> <!--recursive monitoring enabled or disabled -->

<!-- 
    if more than one folder needs to be watched, enable MultipleFolderWatch and just append the same 3 lines as needed from above: path, folder and includesubdirs, e.g.: 
-->

<!--
    <FolderToWatch Path="C:\users\powerofshells\another_download_folder" /> 
    <FolderToWatch Filter="*.*" /> 
    <FolderToWatch IncludeSubDirs="True" />
 -->

    <!-- If nothing is supplied, it will choose the default path which is %appdata$\HashOnDownload\Filewatcher.log -->
    <WatcherLog Path="D:\Filewatcher.log"/>

</Configuration>